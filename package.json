{
  "name": "weather.it",
  "version": "1.11.3",
  "description": "Another weather app with fancy design",
  "repository": "https://github.com/begprod/weather.it",
  "homepage": "https://begprod.github.io/weather.it/",
  "author": "Andrey Aratov",
  "license": "MIT",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "test:unit:watch": "vitest",
    "test:unit": "vitest run",
    "test:coverage": "vitest run --coverage",
    "prettier:check": "prettier --check src/",
    "prettier:format": "prettier --write src/",
    "type:check": "vue-tsc --noEmit --skipLibCheck -p tsconfig.vitest.json --composite false",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "deploy": "gh-pages -d dist"
  },
  "dependencies": {
    "@vueuse/core": "^13.2.0",
    "axios": "^1.12.0",
    "lucide-vue-next": "^0.511.0",
    "pinia": "^3.0.2",
    "vue": "^3.5.14",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@pinia/testing": "^1.0.1",
    "@rushstack/eslint-patch": "^1.11.0",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.15.21",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^13.0.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "eslint": "^8.56.0",
    "eslint-plugin-vue": "^9.33.0",
    "gh-pages": "^6.3.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "vite": "^6.4.1",
    "vite-plugin-pwa": "^1.0.0",
    "vitest": "^3.1.4",
    "vue-tsc": "^2.2.10"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
